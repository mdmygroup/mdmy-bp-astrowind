  <!-- Testimonials Section -->
  <section class="py-24 bg-gradient-to-br from-brand to-brandDark text-white">
    <div class="container mx-auto px-5 lg:px-20">
      <div class="text-center max-w-3xl mx-auto mb-16" data-aos="fade-up">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Ce Que Disent Nos Clients
        </h2>
        <p class="text-lg text-brandLight">
          Leur satisfaction est notre plus belle récompense
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Testimonial 1 -->
        <div class="bg-white/10 backdrop-blur-sm p-8 rounded-2xl border border-white/20">
          <div class="flex gap-1 mb-4">
